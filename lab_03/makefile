# Определим компилятор и флаги
CC = gcc
CFLAGS = -Wall -Wextra -O2
LDFLAGS = -lm

# Найдем все .c файлы в текущей директории
SRCS = $(wildcard *.c)

# Создадим список исполняемых файлов на основе .c файлов
EXES = $(SRCS:.c=)

# Правило по умолчанию, компилирующее все исполняемые файлы
all: $(EXES)

# Правило для компиляции .c файлов в исполняемые файлы
%: %.c
	$(CC) $(CFLAGS) -o $@ $< $(LDFLAGS)

# Правило для очистки скомпилированных файлов
clean:
	rm -f $(EXES)
